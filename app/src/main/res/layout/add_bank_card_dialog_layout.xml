<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_collection_invitations_dialog_layout"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/tv_default_style"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginEnd="@dimen/dp_12"
            android:text="个人信息认证后，只能绑定本人银行卡"
            android:textColor="#191919"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_23"
            android:background="@drawable/shape_add_bank_card_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_default_style"
                    android:text="姓名:"
                    android:textColor="#191919"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    style="@style/tv_default_style"
                    android:layout_marginStart="@dimen/dp_8"
                    android:text="王小蒙"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_7_5"
                android:layout_marginBottom="@dimen/dp_12"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_default_style"
                    android:text="证件号码:"
                    android:textColor="#191919"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    style="@style/tv_default_style"
                    android:layout_marginStart="@dimen/dp_8"
                    android:text="3703**********1234"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

        </LinearLayout>

        <com.tuofeng.bskyhunchbacktransport.ui.view.SharedButton
            android:id="@+id/btn_ok"
            style="@style/btn_default_style"
            android:layout_marginStart="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_22"
            android:layout_marginBottom="@dimen/dp_23"
            android:text="知道了" />


    </LinearLayout>

</LinearLayout>