<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.MainActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tuofeng.bskyhunchbacktransport.viewmodel.fragment.FragmentMainViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/act_main_layout_bg_color"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlayout_title_notice_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_26_5"
                android:background="@color/act_main_title_notice_bg_color">

                <ImageView
                    android:id="@+id/img_title_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:src="@mipmap/act_main_trumpet" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toEndOf="@+id/img_title_notice"
                    android:includeFontPadding="false"
                    android:text="公告内容公告内容公告内容公告内容公告内容"
                    android:textColor="@color/act_main_title_notice_content_color"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/img_title_notice_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:src="@mipmap/act_main_title_notice_clear_content_color" />

            </RelativeLayout>

            <LinearLayout
                style="@style/main_act_options_bar1_layout_home_style"
                android:background="@color/color_main_orange">

                <LinearLayout
                    android:id="@+id/llyaout_waybill_management"
                    style="@style/main_act_title_list_lLayout_style">

                    <ImageView
                        style="@style/main_act_title_list_img_style"
                        android:src="@mipmap/act_main_waybill_management_icon" />

                    <TextView
                        style="@style/main_act_title_list_txt_style"
                        android:text="运单管理" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llyaout_vehicle_management"
                    style="@style/main_act_title_list_lLayout_style">

                    <ImageView
                        style="@style/main_act_title_list_img_style"
                        android:src="@mipmap/act_main_vehicle_management_icon" />

                    <TextView
                        style="@style/main_act_title_list_txt_style"
                        android:text="车辆管理" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llyaout_personnel_management"

                    style="@style/main_act_title_list_lLayout_style">

                    <ImageView
                        style="@style/main_act_title_list_img_style"
                        android:src="@mipmap/act_main_personnel_management_icon" />

                    <TextView
                        style="@style/main_act_title_list_txt_style"
                        android:text="人员管理" />

                </LinearLayout>

                <LinearLayout style="@style/main_act_title_list_lLayout_style">

                    <ImageView
                        style="@style/main_act_title_list_img_style"
                        android:src="@mipmap/act_fleet_management_icon" />

                    <TextView
                        style="@style/main_act_title_list_txt_style"
                        android:text="车队管理" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/main_act_options_bar1_layout_home_style"
                android:background="@color/white">

                <RelativeLayout style="@style/main_act_title_list_lLayout_style">

                    <ImageView
                        android:id="@+id/img_waybill_management"
                        android:layout_width="@dimen/dp_27_5"
                        android:layout_height="@dimen/dp_32_5"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:src="@mipmap/act_waybill_task_icon" />

                    <TextView
                        style="@style/main_act_options_bar_txt_style"
                        android:layout_below="@+id/img_waybill_management"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_7_5"
                        android:text="运单任务" />

                    <TextView
                        android:id="@+id/tv_main_bottom_tab1_dots"
                        style="@style/act_main_bottom_dots_style"
                        android:layout_alignTop="@+id/img_waybill_management"
                        android:layout_toEndOf="@+id/img_waybill_management"
                        android:text="9" />

                </RelativeLayout>

                <RelativeLayout style="@style/main_act_title_list_lLayout_style">

                    <ImageView
                        android:id="@+id/img_cooperate"
                        android:layout_width="@dimen/dp_27_5"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:src="@mipmap/act_cooperate_icon" />

                    <TextView
                        style="@style/main_act_options_bar_txt_style"
                        android:layout_below="@+id/img_cooperate"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_9"
                        android:text="合作" />

                    <TextView
                        style="@style/act_main_bottom_dots_style"
                        android:layout_alignTop="@+id/img_cooperate"
                        android:layout_toEndOf="@+id/img_cooperate"
                        android:background="@drawable/shape_main_act_title_red_rectangle"
                        android:paddingStart="@dimen/dp_4"
                        android:paddingTop="@dimen/dp_1"
                        android:paddingEnd="@dimen/dp_4"
                        android:paddingBottom="@dimen/dp_2"
                        android:text="new" />

                </RelativeLayout>

                <RelativeLayout style="@style/main_act_title_list_lLayout_style">

                    <ImageView
                        android:id="@+id/img_operation_guide"
                        android:layout_width="@dimen/dp_29"
                        android:layout_height="@dimen/dp_32_5"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:src="@mipmap/act_operation_guide_icon" />

                    <TextView
                        style="@style/main_act_options_bar_txt_style"
                        android:layout_below="@+id/img_operation_guide"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_7"
                        android:text="操作指南" />
                </RelativeLayout>

                <RelativeLayout style="@style/main_act_title_list_lLayout_style">

                    <ImageView
                        android:id="@+id/img_common_problem"
                        android:layout_width="@dimen/dp_32_5"
                        android:layout_height="@dimen/dp_32_5"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:src="@mipmap/act_common_problem_icon" />

                    <TextView
                        style="@style/main_act_options_bar_txt_style"
                        android:layout_below="@+id/img_common_problem"
                        android:layout_centerHorizontal="true"
                        android:text="常见问题" />
                </RelativeLayout>

            </LinearLayout>

            <com.tuofeng.bskyhunchbacktransport.ui.view.ImageSlideshow
                android:id="@+id/vp_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_74_5"
                android:layout_margin="@dimen/dp_12" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_alarm_clock"
                        android:layout_width="@dimen/dp_14_5"
                        android:layout_height="@dimen/dp_14_5"
                        android:src="@mipmap/alarm_clock" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_4"
                        android:includeFontPadding="false"
                        android:text="临期任务 "
                        android:textColor="@color/act_login_re_adapter_tv_color"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_4"
                        android:includeFontPadding="false"
                        android:text="查看更多"
                        android:textColor="@color/act_login_re_adapter_tv_color"
                        android:textSize="@dimen/sp_10" />

                    <ImageView
                        android:id="@+id/image_see_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/see_more" />
                </LinearLayout>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_act_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_12"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>