<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.HistoryWayBillDetailsActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tuofeng.bskyhunchbacktransport.viewmodel.activity.MyPurseViewModel" />
    </data>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/titlelbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_12"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlayout_my_purse"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_mine_wallet_bg">

            <TextView
                style="@style/tv_default_style"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_12"
                android:text="我的钱包"
                android:textColor="@color/fragment_mine_tab1_wallet_color"
                android:textSize="@dimen/sp_16" />

            <TextView
                style="@style/tv_default_style"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_14"
                android:text="提现"
                android:textColor="@color/fragment_mine_tab1_withdraw_color"
                android:textSize="@dimen/sp_16" />

            <TextView
                style="@style/tv_default_style"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_25"
                android:text="¥9999.99"
                android:textColor="@color/fragment_mine_tab1_amount_color"
                android:textSize="25sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_historicalwaybill"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_weight="1"
            android:background="@drawable/shape_mine_historical_waybill_bg">

            <TextView
                style="@style/tv_default_style"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_12"
                android:text="历史运单"
                android:textColor="@color/fragment_mine_tab1_wallet_color"
                android:textSize="@dimen/sp_16" />

            <TextView
                style="@style/tv_default_style"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_14"
                android:text="详情>>"
                android:textColor="@color/fragment_mine_tab2_details_color"
                android:textSize="@dimen/sp_16" />

            <TextView
                style="@style/tv_default_style"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_25"
                android:text="99单"
                android:textColor="@color/fragment_mine_tab2_waybill_number_color"
                android:textSize="25sp" />

        </RelativeLayout>


    </LinearLayout>

    <com.tuofeng.bskyhunchbacktransport.ui.view.ImageSlideshow
        android:id="@+id/vp_user_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_74_5"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_12" />

    <LinearLayout
        style="@style/main_fragment_min_layout_style"
        android:layout_height="@dimen/dp_122_5"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/tv_default_style"
                android:text="余额变动"
                android:textColor="@color/fragment_mine_tab1_wallet_color"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_default_style"
                    android:text="累计"
                    android:textColor="@color/activity_my_purse_tv_color1"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    style="@style/tv_default_style"
                    android:layout_marginStart="@dimen/dp_3"
                    android:text="99999.99"
                    android:textColor="@color/fragment_mine_tab1_wallet_color"
                    android:textSize="@dimen/sp_24" />

            </LinearLayout>

            <TextView
                style="@style/act_my_purser_details_style"
                android:text="明细" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/tv_default_style"
                android:text="奖励金变动"
                android:textColor="@color/fragment_mine_tab1_wallet_color"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_default_style"
                    android:text="累计"
                    android:textColor="@color/activity_my_purse_tv_color1"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    style="@style/tv_default_style"
                    android:layout_marginStart="@dimen/dp_3"
                    android:text="99999.99"
                    android:textColor="@color/fragment_mine_tab1_wallet_color"
                    android:textSize="@dimen/sp_24" />

            </LinearLayout>

            <TextView
                style="@style/act_my_purser_details_style"
                android:text="明细" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</layout>