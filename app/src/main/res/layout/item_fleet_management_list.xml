<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.MainActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="dataBean"
            type="com.tuofeng.bskyhunchbacktransport.module.bean.MainActRelistBean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12"
        android:background="@drawable/shape_fleet_management_item_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_12">

            <TextView
                style="@style/tv_default_style"
                android:layout_marginTop="@dimen/dp_12"
                android:text="京A123456"
                android:textColor="#ff1108"
                android:textSize="@dimen/sp_16" />

            <TextView
                style="@style/tv_default_style"
                android:layout_marginTop="@dimen/dp_8"
                android:text="司机姓名：王小蒙"
                android:textColor="#191919"
                android:textSize="@dimen/sp_18" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_12"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/address_icon" />

                <TextView
                    style="@style/tv_default_style"
                    android:layout_marginStart="@dimen/dp_8"
                    android:text="四川省成都市金牛区 "
                    android:textColor="@color/tv_default_color2"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:src="@mipmap/item_bj" />

    </RelativeLayout>

</layout>