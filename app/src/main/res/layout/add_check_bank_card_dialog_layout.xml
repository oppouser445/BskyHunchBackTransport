<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_collection_invitations_dialog_layout"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/tv_default_style"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_marginEnd="@dimen/dp_12"
            android:text="请核对银行卡号"
            android:textColor="#191919"
            android:textSize="@dimen/sp_16" />

        <TextView
            style="@style/tv_default_style"
            android:layout_marginTop="@dimen/dp_32"
            android:text="1234 2345 6789 1234 5678"
            android:textColor="#191919"
            android:textSize="@dimen/sp_16" />

        <com.tuofeng.bskyhunchbacktransport.ui.view.SharedButton
            android:id="@+id/btn_ok"
            style="@style/btn_default_style"
            android:layout_marginStart="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_29_5"
            android:layout_marginEnd="@dimen/dp_22"
            android:layout_marginBottom="@dimen/dp_23"
            android:text="确认无误" />


    </LinearLayout>

</LinearLayout>