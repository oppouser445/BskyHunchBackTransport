<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.MessageCenterDetailsActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="dataBean"
            type="com.tuofeng.bskyhunchbacktransport.module.bean.MesssageCenterBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:orientation="vertical">

        <View
            android:id="@+id/view_interval"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_12"
            android:background="@color/main_default_bg_color"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lLyaout_message_center_adapter_home_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_act_login_relist_bg_orange"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12">

                <TextView
                    android:id="@+id/tv_message_center_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:includeFontPadding="false"
                    android:text="成都市双流区"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_toEndOf="@+id/tv_message_center_title"
                    android:background="@drawable/shape_message_center_rounded_rectangle"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:text="new"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:includeFontPadding="false"
                    android:text="成都市双流区"
                    android:textColor="@color/fragment_message_center_color"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:includeFontPadding="false"
                android:text="为XXXXXXXXXXXXXXXXXXX，本平台将在XXXXX时间内，
                举行XXXXXXXXXX活动。详情请………。点击查看详细"
                android:textColor="@color/act_login_re_adapter_tv_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginBottom="@dimen/dp_5"
                android:drawableStart="@mipmap/message_center_trumpet"
                android:drawablePadding="@dimen/dp_7"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="新人活动"
                android:textColor="@color/act_login_re_adapter_tv_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

    </LinearLayout>

</layout>