<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/titlelbar_layout" />

    <LinearLayout
        android:id="@+id/lLyaout_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            style="@style/tv_default_style"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_21"
            android:text="短信验证"
            android:textColor="@color/tv_default_color"
            android:textSize="@dimen/sp_18" />

        <TextView
            style="@style/tv_default_style"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_4"
            android:text="用于重新设置提现密码前的身份确认"
            android:textColor="@color/tv_default_color2"
            android:textSize="@dimen/sp_15" />

        <View
            style="@style/line_default_style"
            android:layout_marginTop="@dimen/dp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_20"
            tools:ignore="RtlSymmetry">

            <TextView
                style="@style/tv_default_style"
                android:text="手机号:"
                android:textColor="@color/tv_default_color"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:singleLine="true"
                android:textColor="@color/act_login_edit_color1"
                android:textColorHint="@color/act_login_edit_color2"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <View style="@style/line_default_style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_20"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/tv_verification_code"
                style="@style/tv_default_style"
                android:layout_centerVertical="true"
                android:text="验证码:"
                android:textColor="@color/tv_default_color"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_toEndOf="@+id/tv_verification_code"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:singleLine="true"
                android:textColor="@color/act_login_edit_color1"
                android:textColorHint="@color/act_login_edit_color2"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:text="重新获取(60S)"
                android:textColor="#ff8823"
                android:textSize="@dimen/sp_15" />

        </RelativeLayout>

        <View style="@style/line_default_style" />

        <com.tuofeng.bskyhunchbacktransport.ui.view.SharedButton
            android:id="@+id/btn_ok"
            style="@style/btn_default_style"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_44"
            android:layout_marginEnd="@dimen/dp_20"
            android:text="确认添加" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lLyaout_set_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            style="@style/tv_default_style"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_21"
            android:text="设置提现密码"
            android:textColor="@color/tv_default_color"
            android:textSize="@dimen/sp_18" />

        <TextView
            style="@style/tv_default_style"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_4"
            android:text="用于已结算的金额提现到你的银行卡内"
            android:textColor="@color/tv_default_color2"
            android:textSize="@dimen/sp_15" />

        <com.tuofeng.bskyhunchbacktransport.ui.view.VerifyEditText
            android:id="@+id/vet3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            app:verify_background_normal="@drawable/shape_verify_edittext_default_bg2"
            app:verify_count="6"
            app:verify_inputType="number"
            app:verify_margin="@dimen/dp_15"
            app:verify_textSize="@dimen/sp_25" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8">

            <TextView
                style="@style/tv_default_style"
                android:layout_marginStart="@dimen/dp_20"
                android:text="修改密码"
                android:textColor="@color/tv_default_color2"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_forgot_password"
                style="@style/tv_default_style"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:text="忘记密码?"
                android:textColor="#ff1108"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>