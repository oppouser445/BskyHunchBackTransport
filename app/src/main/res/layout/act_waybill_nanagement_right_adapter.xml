<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.MainActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="dataBean"
            type="com.tuofeng.bskyhunchbacktransport.module.bean.MainActRelistBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05-16 至 05-20"
            android:layout_marginTop="@dimen/dp_6"
            android:textColor="@color/color_main_orange"
            android:textSize="@dimen/sp_12" />

        <RelativeLayout
            android:id="@+id/rl_driver_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/circle_green"
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_7"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/circle_shape" />

                <TextView
                    android:id="@+id/line_vertical"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_19"
                    android:layout_below="@+id/circle_green"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@drawable/line_vertical"
                    android:layerType="software" />

                <TextView
                    android:id="@+id/circle_red"
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_7"
                    android:layout_below="@+id/line_vertical"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@drawable/circle_red" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_left_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_toEndOf="@+id/relative_right"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_origin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="四川省成都市双流区"
                    android:textColor="@color/act_waybill_management_color"
                    android:textSize="@dimen/sp_16"
                    android:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_left_terminus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_left_origin"
                android:layout_marginStart="@dimen/dp_9"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_toEndOf="@+id/relative_right">

                <TextView
                    android:id="@+id/tv_terminus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="四川省成都市金牛区"
                    android:textColor="@color/act_waybill_management_color"
                    android:textSize="@dimen/sp_16"
                    android:visibility="visible" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_scope_terminus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="货物名称: 备注备注备注备注备注备注"
            android:textColor="@color/act_waybill_management_color2"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_6"
            android:background="@color/view_line_color" />

    </LinearLayout>

</layout>