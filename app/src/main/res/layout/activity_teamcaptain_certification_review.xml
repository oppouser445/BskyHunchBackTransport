<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/titlelbar_layout" />

    <ScrollView
        android:layout_width ="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_93"
                android:layout_height="@dimen/dp_93"
                android:layout_marginTop="@dimen/dp_71"
                android:src="@mipmap/wait_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_27"
                android:includeFontPadding="false"
                android:text="正在审核中，请稍后"
                android:textColor="#25a3fc"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="210dp"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_28"
                android:includeFontPadding="false"
                android:text="审核通过后，可以管理你的车队了"
                android:textColor="#888888"
                android:textSize="@dimen/sp_14" />

            <include layout="@layout/driver_certification_view" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_49"
                android:background="@color/white" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>