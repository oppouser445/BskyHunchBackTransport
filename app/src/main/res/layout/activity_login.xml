<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.tuofeng.bskyhunchbacktransport.viewmodel.LoginViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_89"
                android:layout_height="@dimen/dp_90_5"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_72_5"
                android:src="@mipmap/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="网络货运平台"
                android:textColor="#ff191919"
                android:textSize="@dimen/sp_18" />

            <LinearLayout
                android:id="@+id/linear_select_login_type_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_75"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="@dimen/dp_28"
                    android:includeFontPadding="false"
                    android:text="请选择你要认证的身份"
                    android:textColor="@color/loginact_tv_color1"
                    android:textSize="@dimen/sp_15" />

                <com.tuofeng.bskyhunchbacktransport.ui.view.SharedButton
                    android:id="@+id/btn_my_driver"
                    style="@style/login_act_btn_style"
                    android:onClick="@{() -> viewModel.showLoginView(1)}"
                    android:text="我是司机"
                    android:textColor="@color/white" />

                <com.tuofeng.bskyhunchbacktransport.ui.view.SharedButton
                    android:id="@+id/btn_my_car_team_leader"
                    style="@style/login_act_btn_style"
                    android:onClick="@{() -> viewModel.showLoginView(2)}"
                    android:text="我是车队长"
                    android:textColor="@color/white"
                    app:bgType="1" />

                <com.tuofeng.bskyhunchbacktransport.ui.view.SharedButton
                    android:id="@+id/btn_have_an_account"
                    style="@style/login_act_btn_style"
                    android:onClick="@{() -> viewModel.showLoginView(3)}"
                    android:text="已有账号"
                    android:textColor="@color/white"
                    app:bgType="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLayout_login_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_75"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/login_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginStart="@dimen/dp_28"
                    android:layout_marginEnd="@dimen/dp_28">

                    <EditText
                        android:id="@+id/ed_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/activity_login_edit_bg"
                        android:drawableStart="@mipmap/phone_img"
                        android:drawablePadding="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:hint="请输入手机号"
                        android:inputType="number"
                        android:maxLength="11"
                        android:singleLine="true"
                        android:textColor="@color/act_login_edit_color1"
                        android:textColorHint="@color/act_login_edit_color2"
                        android:textSize="@dimen/sp_15" />

                    <RelativeLayout
                        android:id="@+id/rlayout_empty_phone"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/select_universal_view_bg"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/login_empty_icon" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlayout_login_verification"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginStart="@dimen/dp_28"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_28"
                    android:background="@drawable/activity_login_edit_bg">

                    <EditText
                        android:id="@+id/ed_verification"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/send_code"
                        android:background="@null"
                        android:drawableStart="@mipmap/code_img"
                        android:drawablePadding="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textColor="@color/act_login_edit_color1"
                        android:textColorHint="@color/act_login_edit_color2"
                        android:textSize="@dimen/sp_15" />

                    <RelativeLayout
                        android:id="@+id/rlayout_verification_clear"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/send_code"
                        android:background="@drawable/select_universal_view_bg"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/login_empty_icon" />
                    </RelativeLayout>

                    <com.tuofeng.bskyhunchbacktransport.ui.view.DownTimerText
                        android:id="@+id/send_code"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/select_universal_view_bg"
                        android:enabled="false"
                        android:gravity="center"
                        android:onClick="@{()-> viewModel.getMobileVerificationCode()}"
                        android:padding="@dimen/dp_5"
                        android:text="获取验证码"
                        android:textColor="@color/color_main_orange"
                        android:textSize="@dimen/sp_13"
                        app:textCountdownColor="@color/color_main_orange" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlayuot_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginStart="@dimen/dp_28"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_28"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/rlayout_password_clear"
                        android:background="@drawable/activity_login_edit_bg"
                        android:drawableStart="@mipmap/act_login_pas"
                        android:drawablePadding="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:hint="请输入密码"
                        android:inputType="numberPassword"
                        android:maxLength="6"
                        android:textColor="@color/act_login_edit_color1"
                        android:textColorHint="@color/act_login_edit_color2"
                        android:textSize="@dimen/sp_15" />

                    <RelativeLayout
                        android:id="@+id/rlayout_password_clear"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/select_universal_view_bg"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/login_empty_icon" />
                    </RelativeLayout>

                </RelativeLayout>

                <com.tuofeng.bskyhunchbacktransport.ui.view.SharedButton
                    android:id="@+id/btn_login"
                    style="@style/login_act_btn_style"
                    android:layout_marginTop="@dimen/dp_33"
                    android:alpha="0.3"
                    android:onClick="@{() -> viewModel.loginUser(4)}"
                    android:text="同意协议并注册/登录"
                    android:textColor="@color/white"
                    app:bgType="2" />
                <!--android:onClick="@{()-> viewModel.loginUser(4)}"-->

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chk_login_instruction"
                        android:layout_width="@dimen/dp_21"
                        android:layout_height="@dimen/dp_21"
                        android:layout_marginTop="@dimen/dp_m_2"
                        android:button="@drawable/select_act_login_agreement_btn_bg"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/txt_login_instruction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/chk_login_instruction"
                        android:includeFontPadding="false"
                        android:text="首次登录自动注册网络货运平台账号，并默认您已\n阅读同意《用户服务协议》《隐私协议》"
                        android:textColor="#ffb1b1b1"
                        android:textSize="12sp"
                        android:visibility="visible" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_124_5">

                    <TextView
                        android:id="@+id/tv_switch_identity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_toStartOf="@+id/view_lin"
                        android:background="@drawable/select_act_login_bottom_view_bg"
                        android:includeFontPadding="false"
                        android:padding="@dimen/dp_5"
                        android:text="切换认证身份"
                        android:textColor="@color/act_login_bottom_bg"
                        android:textSize="@dimen/sp_12" />

                    <View
                        android:id="@+id/view_lin"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_17"
                        android:layout_centerInParent="true"
                        android:background="@color/act_login_bottom_bg" />

                    <TextView
                        android:id="@+id/tv_password_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_toEndOf="@+id/view_lin"
                        android:background="@drawable/select_act_login_bottom_view_bg"
                        android:includeFontPadding="false"
                        android:padding="@dimen/dp_5"
                        android:text="密码登录"
                        android:textColor="@color/act_login_bottom_bg"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>