<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_collection_invitations_dialog_layout"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_title"
            style="@style/tv_default_style"
            android:layout_marginTop="@dimen/dp_32"
            android:text="确定解除代收并退出车队？"
            android:textColor="@color/tv_default_color"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/tv_default_style"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_24"
            android:text="¥ 9999.00"
            android:textColor="@color/tv_default_color"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_28"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_48"
                android:layout_weight="1"
                android:background="@drawable/shape_collection_invitations_left_btn_bg"
                android:gravity="center"
                android:text="稍后再说"
                android:textColor="@color/main_orange_color"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_48"
                android:layout_weight="1"
                android:background="@drawable/shape_collection_invitations_right_btn_bg"
                android:gravity="center"
                android:text="确认提现"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_collection_invitations_dialog_layout"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            style="@style/tv_default_style"
            android:layout_marginTop="@dimen/dp_36"
            android:text="请输入提现密码"
            android:textColor="@color/tv_default_color"
            android:textSize="@dimen/sp_16" />

        <TextView
            style="@style/tv_default_style"
            android:layout_marginTop="@dimen/dp_12"
            android:text="提取金额 9999 元"
            android:textColor="@color/tv_default_color2"
            android:textSize="@dimen/sp_16" />

        <com.tuofeng.bskyhunchbacktransport.ui.view.VerifyEditText
            android:id="@+id/vet3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            app:verify_background_normal="@drawable/shape_verify_edittext_default_bg2"
            app:verify_count="6"
            app:verify_inputType="number"
            app:verify_margin="@dimen/dp_15"
            app:verify_textSize="@dimen/sp_25" />

        <TextView
            style="@style/tv_default_style"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_28"
            android:text="忘记密码？"
            android:textColor="#ff25a3fc"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

</LinearLayout>